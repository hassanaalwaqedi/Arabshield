rules_version = '2';

// Firebase Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Project documents - only authenticated users
    match /projects/{projectId}/documents/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.resource.size < 10 * 1024 * 1024; // 10MB limit
      allow delete: if request.auth != null;
    }
    
    // ==========================================
    // User Avatars
    // READ: Any authenticated user (for display)
    // WRITE: Owner only
    // ==========================================
    match /avatars/{userId}/{fileName} {
      // Anyone authenticated can view avatars
      allow read: if request.auth != null;
      
      // Only owner can upload/delete their avatar
      // Max 5MB, image files only
      allow write: if request.auth != null && 
                   request.auth.uid == userId && 
                   request.resource.size < 5 * 1024 * 1024 &&
                   request.resource.contentType.matches('image/.*');
      
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default - deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
